{
    "private": true,
    "license": "MIT",
    "packageManager": "pnpm@9.0.2",
    "scripts": {
        "changesets-version": "changeset version && pnpm run -r postversion",
        "changesets-publish": "pnpm run build && pnpm --filter \"*tons-of-tests*\" run build && changeset publish",
        "check": "biome check --log-kind=compact --diagnostic-level=error",
        "check:fix": "biome check --write --unsafe",
        "cli": "tsx workspace/cli/src/bin.ts",
        "build": "tsc --build",
        "build:watch": "tsc --build --watch"
    },
    "devDependencies": {
        "@biomejs/biome": "^2.2.0",
        "@changesets/changelog-github": "^0.5.1",
        "@changesets/cli": "^2.29.6",
        "@effect/vitest": "^0.25.1",
        "@types/node": "^24.3.0",
        "tsx": "^4.20.4",
        "typescript": "^5.9.2",
        "vitest": "^3.2.4"
    }
}
